    <div id="collapse1" class="panel-collapse collapse in">
      <div id='demo' class="panel-body" ng-controller="DisplayPeopleController">
      		<div id="userform" class="col-sm-6 c" >
				<form ng-submit="submit()">
					<div class="form-group">
						<label>First Name</label></br>
						<input type="text" name="fname" ng-model="form.fname">
					</div>
					<div class="form-group">
						<label>Last Name</label></br>
						<input type="text" name="lname" ng-model="form.lname">
					</div>
					<div class="form-group">
						<label>Email</label></br>
						<input type="text" name="email" ng-model="form.email">
					</div>
					<div class="form-group">
						<select name="role">
							<option value="3">Mentor</option>
							<option value="4">Mentee</option>
						</select>
					</div>
					<input type="submit" class="btn btn-success" name="submit_survey" value="Submit">
				</form>
			</div>

		  <div ng-controller="PersonCtrl">
			  <button id="refreshButton" type="button" class="btn btn-success" ng-click="refreshData()">Refresh Data</button>  <strong>Calls Pending:</strong> <span ng-bind="callsPending"></span>
			  <br>
			  <br>
			  <strong>{{ myData.length }} rows</strong>
			  <br>
			  <div id="grid1" ui-grid="gridOptions" ui-grid-cellNav ui-grid-edit ui-grid-resize-columns ui-grid-pinning ui-grid-selection ui-grid-move-columns ui-grid-importer ui-grid-exporter ui-grid-grouping class="grid"></div>
		  </div>


			<div class="col-sm-6" ng-style="formSty">
					<ul class="people-scroll">
						<div ng-repeat="p in people | orderBy:'lname' track by p.personid">
							<li ng-click="editPerson($event)" ng-attr-id="{{(people.indexOf(p))}}">{{p.lname+", "+p.fname}}</li>
						</div>
					</ul>
			</div>
		</div>
